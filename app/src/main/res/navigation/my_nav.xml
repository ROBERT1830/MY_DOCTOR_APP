<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/cancerRecordsFragment">
    <fragment
        android:id="@+id/cancerRecordsFragment"
        android:name="com.robertconstantindinescu.my_doctor_app.ui.fragments.CancerRecordsFragment"
        android:label="Records"
        tools:layout="@layout/fragment_cancer_records">
        <action
            android:id="@+id/action_cancerRecordsFragment_to_detectorActivity"
            app:destination="@id/detectorActivity" />
    </fragment>
    <fragment
        android:id="@+id/radiationFragment"
        android:name="com.robertconstantindinescu.my_doctor_app.ui.fragments.RadiationFragment"
        android:label="Radiation"
        tools:layout="@layout/fragment_radiation"/>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.robertconstantindinescu.my_doctor_app.ui.fragments.MapsFragment"
        android:label="Search Hospital"
        tools:layout="@layout/fragment_maps"/>
    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.robertconstantindinescu.my_doctor_app.ui.fragments.RecipesFragment"
        android:label="Diet"
        tools:layout="@layout/fragment_recipes"/>
    <activity
        android:id="@+id/detectorActivity"
        android:name="com.robertconstantindinescu.my_doctor_app.ui.DetectorActivity"
        android:label="activity_detector"
        tools:layout="@layout/activity_detector" />
    <fragment
        android:id="@+id/btnSettings"
        android:name="com.robertconstantindinescu.my_doctor_app.ui.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/btnSavedPlaces"
        android:name="com.robertconstantindinescu.my_doctor_app.ui.fragments.SavedPlacesFragment"
        android:label="fragment_saved_places"
        tools:layout="@layout/fragment_saved_places" />
</navigation>