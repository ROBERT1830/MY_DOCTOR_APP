<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="current"
            type="com.robertconstantindinescu.my_doctor_app.models.onlineData.Current" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.RadiationFragment">

        <!--    <Button-->
        <!--        android:id="@+id/btn_grant_permission"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_margin="10dp"-->
        <!--        android:text="Grant permission"-->
        <!--        android:visibility="visible"-->
        <!--        app:layout_constraintTop_toTopOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"/>-->

        <LinearLayout
            android:id="@+id/linear_layout_uvIndex_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgView_uvIndex_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_uvindex"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtView_txtInfo_uvIndex"
                    setTextInfoRadiation="@{current.uvi}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="High Danger"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtView_title_uvIndex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/index_uv_title"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/txt_uvIndex_result"
                        setIndexRadiatio="@{current.uvi}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="5,6"

                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgView_info"
            setImageViewRadiationInfo="@{current.uvi}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_uvIndex_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/img_riesgo_alato"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txtView_advice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="@string/title_advice"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgView_info"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txtView_advice_body"
            setInfoRadiationBody="@{current.uvi}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:layout_margin="25dp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            app:layout_constraintTop_toBottomOf="@id/txtView_advice_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla quam velit, 
            vulputate eu pharetra nec, mattis ac neque. Duis vulputate commodo lectus, ac blandit elit 
            tincidunt id. Sed rhoncus, tortor sed eleifend ."
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txtView_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="@string/title_location"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtView_advice_body"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"/>
        
        <LinearLayout
            android:id="@+id/linear_layout_date_location_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtView_location_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_margin="25dp"
            android:weightSum="2"
            android:visibility="invisible">
            
            <TextView
                android:id="@+id/textView_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textStart"
                tools:text="22/12/2021 ; 10:23 AM"/>

            <TextView
                android:id="@+id/textView_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                tools:text="San Vicente del Raspeig"/>



            
            
            
            
        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>