<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cancerEntity"
            type="com.robertconstantindinescu.my_doctor_app.models.data.database.entities.CancerDataEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cancerRecordsRowLayout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cancerRecords_row_cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/lightMediumGray"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgView_cancerPhoto"
                    loadImage="@{cancerEntity.img}"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />
                
                <ImageView
                    android:id="@+id/imgView_malignBenign_imgView"
                    applyMalignBenignColor="@{cancerEntity.result}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancer"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgView_cancerPhoto"
                    app:layout_constraintTop_toTopOf="parent"
                     />
                <TextView
                    android:id="@+id/txtView_malignBenign"
                    applyMalignBenignColor="@{cancerEntity.result}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    
                    android:textColor="@color/darker"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Malignant"
                    app:layout_constraintStart_toEndOf="@id/imgView_malignBenign_imgView"
                    app:layout_constraintBottom_toBottomOf="@id/imgView_malignBenign_imgView" />
                <TextView
                    android:id="@+id/txtView_probability"
                    sesetProbabilityt="@{cancerEntity.probability}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="0,7543"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/imgView_malignBenign_imgView"
                    app:layout_constraintStart_toEndOf="@id/imgView_cancerPhoto"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/textView_date"
                    setDate="@{cancerEntity.daete}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="11/12/2021 08:15:22"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/txtView_probability"
                    app:layout_constraintStart_toEndOf="@id/imgView_cancerPhoto"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>